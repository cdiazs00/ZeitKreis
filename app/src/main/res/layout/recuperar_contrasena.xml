<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Segundo ConstraintLayout donde estarán los elementos -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/inner_constraint_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- TextView para "Contraseña nueva" -->
        <TextView
            android:id="@+id/contraseña_nueva_texto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:textSize="30sp"
            android:text="Contraseña nueva:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@id/contraseña_nueva_barra" />

        <!-- EditText para ingresar la contraseña -->
        <EditText
            android:id="@+id/contraseña_nueva_barra"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:background="@color/black"
            android:hint="Ingrese su contraseña"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColorHint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contraseña_nueva_texto"
            app:layout_constraintHorizontal_bias="0.5" />

        <!-- Nuevo TextView para "Repetir contraseña" -->
        <TextView
            android:id="@+id/repetir_contraseña_texto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:textSize="30sp"
            android:layout_marginTop="100dp"
            android:text="Repetir contraseña:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contraseña_nueva_barra"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@id/contraseña_barra_repetida" />

        <!-- Nuevo EditText para repetir la contraseña -->
        <EditText
            android:id="@+id/contraseña_barra_repetida"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:background="@color/black"
            android:hint="Repita su contraseña"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColorHint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/repetir_contraseña_texto"
            app:layout_constraintHorizontal_bias="0.5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Finalizar_contraseña_recuperar"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:background="@color/black"
            android:hint="Finalitzar"
            android:inputType="textPassword"
            android:layout_marginTop="70dp"
            android:padding="10dp"
            android:textSize="20sp"
            android:textColorHint="@color/white"
            app:layout_constraintStart_toEndOf="@id/Atras_contraseña_recuperar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contraseña_barra_repetida"
            app:layout_constraintHorizontal_bias="0.5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Atras_contraseña_recuperar"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:background="@color/black"
            android:hint="Cancelar"
            android:inputType="textPassword"
            android:layout_marginTop="70dp"
            android:padding="10dp"
            android:textSize="20sp"
            android:textColorHint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/Finalizar_contraseña_recuperar"
            app:layout_constraintTop_toBottomOf="@id/contraseña_barra_repetida"
            app:layout_constraintHorizontal_bias="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
