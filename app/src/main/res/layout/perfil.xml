<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/fondo_imagen_perfil"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:background="@color/black"
        tools:ignore="MissingConstraints">
    </View>

    <View
        android:id="@+id/imagen_perfil"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:background="@drawable/circle"
        android:layout_marginBottom="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/inner_constraint_layout"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/nombre_usuario"
        android:text="Sirzech9946"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagen_perfil"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/Correo_usuario"
        android:text="ZeitKreis@gmail.com"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nombre_usuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/inner_constraint_layout"
        tools:ignore="MissingConstraints" />

    <!-- Segundo ConstraintLayout donde estarán los elementos -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/inner_constraint_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Ajustes_Generales"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:background="@color/black"
            android:hint="Ajustes Generales"
            android:inputType="textPassword"
            android:layout_marginTop="70dp"
            android:padding="10dp"
            android:textSize="20sp"
            android:textColorHint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/Ajustes_de_Cuenta"
            app:layout_constraintTop_toBottomOf="@id/inner_constraint_layout"
            app:layout_constraintHorizontal_bias="0.5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Ajustes_de_Cuenta"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:background="@color/black"
            android:hint="Ajustes de Cuenta"
            android:inputType="textPassword"
            android:layout_marginTop="70dp"
            android:padding="10dp"
            android:textSize="20sp"
            android:textColorHint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/Cerrar_sesion"
            app:layout_constraintTop_toBottomOf="@id/Ajustes_Generales"
            app:layout_constraintHorizontal_bias="0.5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Cerrar_sesion"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:background="@color/black"
            android:hint="Cerrar Sesión"
            android:inputType="textPassword"
            android:layout_marginTop="70dp"
            android:padding="10dp"
            android:textSize="20sp"
            android:textColorHint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Ajustes_de_Cuenta"
            app:layout_constraintBottom_toBottomOf="@id/inner_constraint_layout"
            app:layout_constraintHorizontal_bias="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
